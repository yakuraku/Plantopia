{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" },
    { "src": "api.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/?$", "dest": "api.py" },
    { "src": "/api/(.*)", "dest": "api.py" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}